
{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceRoot}/comp_graph",
                "PYDEVD_WARN_SLOW_RESOLVE_TIMEOUT": "2"
            }
        },
        {
            "name": "Debug Tests",
            "type": "python",
            "request": "launch",
            "purpose": ["debug-test"],
            "console": "integratedTerminal",
            "python": "${command:python.interpreterPath}",
            "justMyCode": false
        }
    ]
}